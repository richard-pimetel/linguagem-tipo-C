#include <stdio.h>
#include <math.h>

int main() {
    double a, b, c, delta, x1, x2;

    printf("--- Calculadora de Bhaskara ---\n");
    
    // Passo 1: Leitura dos dados
    printf("Digite o valor de A: ");
    scanf("%lf", &a);

    printf("Digite o valor de B: ");
    scanf("%lf", &b);

    printf("Digite o valor de C: ");
    scanf("%lf", &c);

    // Passo 2: Cálculos matemáticos
    // Delta = b² - 4ac
    delta = pow(b, 2) - (4 * a * c);

    // x = (-b ± √delta) / 2a
    x1 = (-b + sqrt(delta)) / (2 * a);
    x2 = (-b - sqrt(delta)) / (2 * a);

    // Passo 3: Exibição dos resultados
    printf("\n--- Resultados ---\n");
    printf("Delta: %.2lf\n", delta);
    printf("X1:    %.2lf\n", x1);
    printf("X2:    %.2lf\n", x2);
    printf("------------------\n");

    return 0;
}
