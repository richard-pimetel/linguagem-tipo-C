#include <stdio.h>

int main() {
    int h, m, s, total;

    printf("--- Conversor HH:MM:SS para Segundos ---\n");
    printf("Digite o tempo (Ex: 02:30:45): ");
    // O scanf com ":" permite ler o formato exato do bloco de notas
    scanf("%d:%d:%d", &h, &m, &s);

    // 1h = 3600s | 1min = 60s
    total = (h * 3600) + (m * 60) + s;

    printf("\nTotal em segundos: %d\n", total);

    return 0;
}
