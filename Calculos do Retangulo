#include <stdio.h>

int main()
{
    double base, altura, perimetro, area;

    printf("--- Calculos do Retangulo ---\n");

    printf("Digite o valor da base: ");
    scanf("%lf", &base);

    printf("Digite o valor da altura: ");
    scanf("%lf", &altura);

    // Calculando o Perimetro (Soma de todos os lados)
    perimetro = 2 * (base + altura);

    // Calculando a Area (Espaco interno)
    area = base * altura;

    printf("\n--- Resultados ---\n");
    printf("Perimetro: %.2lf\n", perimetro);
    printf("Area:      %.2lf\n", area);

    return 0;
}
